extends ../template/layout

block content
	.row
		.small-12.columns
			h1 Your Calendar Page!
			.calendar
	.row
		.small-12.columns
			form#addEventForm
				h4 Make A New Event
				.row
					.small-6.columns
						label(for="title") Title:
						input(type="text",name="title")#title
					.small-6.columns
						label(for="color") Color:
						input(type="text",name="color")#color
				.row
					.small-6.columns
						label(for="start") Start:
						input(type="text", name="start").fpPicker#start
					.small-6.columns
						label(for="end") End:
						input(type="text", name="end").second#end
				.row
					.small-12.columns
						button.expand.success#eventSubmit Submit
				.row
					.small-12.columns
						ul#eventList
							if(band.events != null)
								for ev in band.events 
									div.event(data-id="#{ev.id}")
										h3 Event Title :
											a(href="calendar/#{ev.id}")
												i.fa.fa-edit.small
												| #{ev.title}
										p Start Time: #{ev.start}
										p End Time: #{ev.end}
										a.button.alert.eventDelete
											i.fa.fa-trash-o 
							else
								h3.
									Add Events Above



