extends ../template/layout

block content
	.row
		.small-12.columns
			h1(data-id="#{event.id}") Edit Your Event
	.row
		.small-12.columns
			form(action='#', method='#')#editForm
			.row
				.small-12.columns
					label(for='title') Title:
					input(name='title', type='text', value="#{event.title}")#title
			.row
				.small-6.columns
					label(for='start') Start:
					input(name='start', type='text', value='#{event.start}').fpPicker#start
				.small-6.columns
					label(for='end') End:
					input(name='end', type='text', value='#{event.end}').second#end
			.row
				.small-12.columns
					button.expand.success#eventEdit Edit Event