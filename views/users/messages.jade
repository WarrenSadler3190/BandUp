extends ../template/layout

block content
	.row
		.small-12.columns
			h2 Send Messages to these Users!
	.row
		.small-12.columns
			for u in users
				#userBox(style='background-image:url(#{u.image}); background-size:cover; background-position:center;')
					a(href='/messages/#{u.id}')= u.name
				br
	.row
		.small-12.columns
			if currentUser.messages.length > 0
				h3 Here are your messages 
					ul
						for m in currentUser.messages
							li: div(data-id='#{m.id}').message
								h4 
								|	Title: #{m.title}
								h6
								| from - #{m.from}
								hr
								h6= m.createdAt
								p message - #{m.body}
								a.deleteMessage.button.alert x 

			else
				h3 You have no messages :(